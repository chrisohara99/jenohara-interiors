---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Interior design that transforms spaces into sanctuaries." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Jen O'Hara Interiors</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
  <style>
    :root {
      --color-cream: #FAF9F6;
      --color-warm-white: #FEFDFB;
      --color-taupe: #8B8178;
      --color-charcoal: #2C2C2C;
      --color-soft-black: #1a1a1a;
      --color-gold: #C9A96E;
      --color-sage: #9CAF88;
      --font-serif: 'Cormorant Garamond', Georgia, serif;
      --font-sans: 'Montserrat', -apple-system, sans-serif;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html {
      scroll-behavior: smooth;
    }
    
    body {
      font-family: var(--font-sans);
      background: var(--color-cream);
      color: var(--color-charcoal);
      line-height: 1.7;
      font-weight: 300;
    }
    
    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 2rem;
    }
    
    /* Header */
    header {
      padding: 1.5rem 0;
      background: var(--color-warm-white);
      border-bottom: 1px solid rgba(0,0,0,0.05);
      overflow: visible;
    }
    
    .logo img {
      display: block;
    }
    
    .header-inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-family: var(--font-serif);
      font-size: 1.75rem;
      font-weight: 300;
      color: var(--color-soft-black);
      text-decoration: none;
      letter-spacing: 0.02em;
    }
    
    .logo span {
      font-weight: 500;
    }
    
    nav {
      display: flex;
      gap: 2.5rem;
    }
    
    nav a {
      font-family: var(--font-sans);
      font-size: 0.8rem;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: var(--color-taupe);
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    nav a:hover {
      color: var(--color-soft-black);
    }
    
    /* Main Content */
    main {
      min-height: 70vh;
    }
    
    /* Typography */
    h1, h2, h3 {
      font-family: var(--font-serif);
      font-weight: 300;
      line-height: 1.3;
    }
    
    h1 {
      font-size: clamp(2.5rem, 5vw, 4rem);
      margin-bottom: 1.5rem;
    }
    
    h2 {
      font-size: clamp(1.75rem, 3vw, 2.5rem);
      margin-bottom: 1rem;
    }
    
    h3 {
      font-size: 1.25rem;
      font-weight: 400;
    }
    
    p {
      font-size: 1rem;
      color: var(--color-taupe);
      max-width: 600px;
    }
    
    /* Sections */
    section {
      padding: 6rem 0;
    }
    
    .section-header {
      text-align: center;
      margin-bottom: 4rem;
    }
    
    .section-header p {
      margin: 0 auto;
    }
    
    /* Hero */
    .hero {
      min-height: 70vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      background: linear-gradient(to bottom, var(--color-warm-white), var(--color-cream));
    }
    
    .hero-content {
      max-width: 800px;
    }
    
    .hero h1 {
      font-size: clamp(2.5rem, 6vw, 4.5rem);
      margin-bottom: 1.5rem;
      color: var(--color-soft-black);
    }
    
    .hero p {
      font-size: 1.125rem;
      margin: 0 auto 2.5rem;
    }
    
    /* Buttons */
    .btn {
      display: inline-block;
      font-family: var(--font-sans);
      font-size: 0.75rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      padding: 1rem 2.5rem;
      border: 1px solid var(--color-soft-black);
      background: transparent;
      color: var(--color-soft-black);
      text-decoration: none;
      transition: all 0.3s ease;
      cursor: pointer;
    }
    
    .btn:hover {
      background: var(--color-soft-black);
      color: var(--color-cream);
    }
    
    /* Featured Image */
    .featured-image {
      position: relative;
      width: 100%;
      max-height: 500px;
      overflow: hidden;
      border-radius: 4px;
      margin-bottom: 1.5rem;
    }
    
    .featured-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s ease;
    }
    
    .featured-image:hover img {
      transform: scale(1.02);
    }
    
    .featured-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 2rem;
      background: linear-gradient(to top, rgba(0,0,0,0.5) 0%, transparent 100%);
    }
    
    .featured-overlay span {
      color: white;
      font-family: var(--font-serif);
      font-size: 1.5rem;
      font-weight: 300;
    }
    
    /* Masonry Gallery */
    .masonry-gallery {
      columns: 4;
      column-gap: 0.75rem;
    }
    
    .masonry-item {
      break-inside: avoid;
      margin-bottom: 0.75rem;
      position: relative;
      overflow: hidden;
      border-radius: 3px;
    }
    
    .masonry-item img {
      width: 100%;
      display: block;
      transition: transform 0.6s ease;
    }
    
    .masonry-item:hover img {
      transform: scale(1.03);
    }
    
    .masonry-item .overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 1rem 0.75rem;
      background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .masonry-item:hover .overlay {
      opacity: 1;
    }
    
    .masonry-item .overlay span {
      color: white;
      font-family: var(--font-serif);
      font-size: 1rem;
      font-weight: 300;
    }
    
    /* Services */
    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 3rem;
    }
    
    .service-card {
      text-align: center;
      padding: 2rem;
    }
    
    .service-card h3 {
      margin-bottom: 1rem;
      color: var(--color-soft-black);
    }
    
    .service-card p {
      margin: 0 auto;
      font-size: 0.95rem;
    }
    
    /* About */
    .about-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
      max-width: 1100px;
      margin: 0 auto;
    }
    
    .about-image {
      aspect-ratio: 3/4;
      background: var(--color-taupe);
      border-radius: 4px;
      overflow: hidden;
    }
    
    .about-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .about-content h2 {
      margin-bottom: 1.5rem;
    }
    
    .about-content p {
      margin-bottom: 1.5rem;
      max-width: none;
    }
    
    /* Contact */
    .contact-section {
      background: var(--color-warm-white);
      text-align: center;
    }
    
    .contact-info {
      margin-top: 2rem;
    }
    
    .contact-info a {
      color: var(--color-taupe);
      text-decoration: none;
      font-size: 1.125rem;
      transition: color 0.3s;
    }
    
    .contact-info a:hover {
      color: var(--color-soft-black);
    }
    
    /* Footer */
    footer {
      padding: 3rem 0;
      text-align: center;
      border-top: 1px solid rgba(0,0,0,0.05);
    }
    
    footer p {
      font-size: 0.8rem;
      margin: 0 auto;
      letter-spacing: 0.05em;
    }
    
    /* Responsive */
    @media (max-width: 1200px) {
      .masonry-gallery {
        columns: 3;
      }
    }
    
    @media (max-width: 900px) {
      .masonry-gallery {
        columns: 2;
      }
    }
    
    @media (max-width: 768px) {
      .header-inner {
        flex-direction: column;
        gap: 1.5rem;
      }
      
      nav {
        gap: 1.5rem;
      }
      
      .about-grid {
        grid-template-columns: 1fr;
      }
      
      .masonry-gallery {
        columns: 2;
        column-gap: 0.5rem;
      }
      
      .masonry-item {
        margin-bottom: 0.5rem;
      }
      
      .featured-image {
        max-height: 300px;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="container header-inner">
      <a href="/" class="logo"><img src="/images/logo.svg" alt="Jen O'Hara Interiors" style="height: 85px; width: auto;"></a>
      <nav>
        <a href="/#portfolio">Portfolio</a>
        <a href="/#services">Services</a>
        <a href="/about">About</a>
        <a href="/#contact">Contact</a>
      </nav>
    </div>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <div class="container">
      <p>&copy; 2026 Jen O'Hara Interiors. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
