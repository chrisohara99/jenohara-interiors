---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Interior design that transforms spaces into sanctuaries." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Jen O'Hara Interiors</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;1,300;1,400&family=Jost:wght@300;400;500&display=swap" rel="stylesheet">
  <style>
    :root {
      --color-bg: #FDFCFA;
      --color-cream: #F8F6F3;
      --color-taupe: #9A938B;
      --color-warm-gray: #6B6560;
      --color-charcoal: #3D3935;
      --color-black: #1C1B1A;
      --color-gold: #B8A88A;
      --font-serif: 'Cormorant Garamond', Georgia, serif;
      --font-sans: 'Jost', -apple-system, sans-serif;
    }
    
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    html { scroll-behavior: smooth; }
    
    body {
      font-family: var(--font-sans);
      background: var(--color-bg);
      color: var(--color-charcoal);
      line-height: 1.8;
      font-weight: 300;
      font-size: 16px;
    }
    
    .container {
      max-width: 1300px;
      margin: 0 auto;
      padding: 0 3rem;
    }
    
    .container-narrow {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 3rem;
    }
    
    /* Header */
    header {
      padding: 1.5rem 0;
      background: var(--color-bg);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 100;
      border-bottom: 1px solid rgba(0,0,0,0.04);
    }
    
    .header-inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-family: var(--font-serif);
      font-size: 1.4rem;
      font-weight: 400;
      color: var(--color-black);
      text-decoration: none;
      letter-spacing: 0.02em;
    }
    
    nav {
      display: flex;
      gap: 2.5rem;
    }
    
    nav a {
      font-family: var(--font-sans);
      font-size: 0.8rem;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: var(--color-warm-gray);
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    nav a:hover { color: var(--color-black); }
    
    /* Main */
    main { padding-top: 80px; }
    
    /* Typography */
    h1, h2, h3, h4 {
      font-family: var(--font-serif);
      font-weight: 400;
      line-height: 1.3;
      color: var(--color-black);
    }
    
    h1 { font-size: clamp(2.5rem, 5vw, 3.5rem); }
    h2 { font-size: clamp(2rem, 4vw, 2.75rem); }
    h3 { font-size: 1.5rem; }
    h4 { font-size: 1.1rem; font-weight: 500; }
    
    p {
      color: var(--color-warm-gray);
      max-width: 650px;
    }
    
    /* Sections */
    section { padding: 6rem 0; }
    
    .section-cream { background: var(--color-cream); }
    
    /* Hero */
    .hero {
      min-height: 90vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 8rem 2rem;
    }
    
    .hero h1 {
      margin-bottom: 1.5rem;
      font-weight: 300;
    }
    
    .hero p {
      font-size: 1.1rem;
      margin: 0 auto;
      line-height: 1.9;
    }
    
    /* Quote Block */
    .quote-block {
      padding: 5rem 0;
      text-align: center;
      border-top: 1px solid rgba(0,0,0,0.06);
      border-bottom: 1px solid rgba(0,0,0,0.06);
    }
    
    .quote-block blockquote {
      font-family: var(--font-serif);
      font-size: clamp(1.25rem, 2.5vw, 1.6rem);
      font-style: italic;
      font-weight: 300;
      color: var(--color-charcoal);
      max-width: 850px;
      margin: 0 auto;
      line-height: 1.8;
    }
    
    /* Projects Grid */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
    
    .project-card {
      text-align: center;
    }
    
    .project-card .image-wrap {
      aspect-ratio: 3/4;
      overflow: hidden;
      margin-bottom: 1.5rem;
      background: var(--color-cream);
    }
    
    .project-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.8s ease;
    }
    
    .project-card:hover img {
      transform: scale(1.04);
    }
    
    .project-card h3 {
      font-size: 1.35rem;
      margin-bottom: 0.75rem;
      font-weight: 400;
    }
    
    .project-card p {
      font-size: 0.95rem;
      margin: 0 auto 1.25rem;
      max-width: 320px;
      line-height: 1.7;
    }
    
    .project-card .btn-text {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: var(--color-charcoal);
      text-decoration: none;
      border-bottom: 1px solid var(--color-gold);
      padding-bottom: 2px;
      transition: color 0.3s, border-color 0.3s;
    }
    
    .project-card .btn-text:hover {
      color: var(--color-gold);
    }
    
    /* Designer Section */
    .designer-section {
      padding: 7rem 0;
    }
    
    .designer-grid {
      display: grid;
      grid-template-columns: 1fr 1.2fr;
      gap: 5rem;
      align-items: center;
    }
    
    .designer-image {
      aspect-ratio: 3/4;
      background: var(--color-cream);
      overflow: hidden;
    }
    
    .designer-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .designer-content h4 {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--color-taupe);
      margin-bottom: 1rem;
      font-family: var(--font-sans);
      font-weight: 400;
    }
    
    .designer-content h2 {
      margin-bottom: 1.5rem;
    }
    
    .designer-content p {
      margin-bottom: 1.25rem;
      max-width: none;
    }
    
    /* Buttons */
    .btn {
      display: inline-block;
      font-family: var(--font-sans);
      font-size: 0.75rem;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      padding: 1rem 2.5rem;
      border: 1px solid var(--color-black);
      background: transparent;
      color: var(--color-black);
      text-decoration: none;
      transition: all 0.3s ease;
    }
    
    .btn:hover {
      background: var(--color-black);
      color: var(--color-bg);
    }
    
    /* Contact */
    .contact-section {
      text-align: center;
      padding: 7rem 0;
    }
    
    .contact-section h2 { margin-bottom: 1rem; }
    
    .contact-section p {
      margin: 0 auto 2rem;
    }
    
    .contact-email {
      font-family: var(--font-serif);
      font-size: 1.3rem;
      color: var(--color-charcoal);
      text-decoration: none;
      border-bottom: 1px solid var(--color-gold);
    }
    
    .contact-email:hover { color: var(--color-gold); }
    
    /* Footer */
    footer {
      padding: 2.5rem 0;
      text-align: center;
      border-top: 1px solid rgba(0,0,0,0.06);
    }
    
    footer p {
      font-size: 0.8rem;
      color: var(--color-taupe);
      margin: 0 auto;
      letter-spacing: 0.03em;
    }
    
    /* Responsive */
    @media (max-width: 1024px) {
      .projects-grid { grid-template-columns: repeat(2, 1fr); }
      .designer-grid { grid-template-columns: 1fr; gap: 3rem; }
      .designer-image { max-width: 450px; margin: 0 auto; }
    }
    
    @media (max-width: 768px) {
      .container, .container-narrow { padding: 0 1.5rem; }
      .header-inner { flex-direction: column; gap: 1rem; }
      nav { gap: 1.5rem; }
      .projects-grid { grid-template-columns: 1fr; max-width: 450px; margin: 0 auto; }
      section { padding: 4rem 0; }
    }
  </style>
</head>
<body>
  <header>
    <div class="container header-inner">
      <a href="/" class="logo">Jen O'Hara Interiors</a>
      <nav>
        <a href="/#projects">Projects</a>
        <a href="/about">About</a>
        <a href="/#contact">Contact</a>
      </nav>
    </div>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <div class="container">
      <p>&copy; 2026 Jen O'Hara Interiors. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
